<%-include('header')%>

<body>


    <!-- Page Content -->
    <div class="container container-main">
  
        <div class="row">
          <div class="col">
            <h3 class="text-center">Votre liste de préférences</h3>
  
            <table class="table">
              <thead>
                <th>Article</th>
                <th>Origine</th>
                <th>caractéristique</th>
                <th>reference</th>
                <th>Prix KG</th>
              </thead>
              <tbody>
                <% if(carts){
                for(const cart of carts) { %>
                <tr>
                  <td>
                    <div class="item-description">
                        <h5 class="item-title"><a href="/produit/<%=cart.id%>"><%=cart.name%></a></h5>
                    </div>
                  </td>
                  <td>  
                    <p class="item-subtotal"><%=cart.origine%></p>
                  </td>
                  <td>  
                    <p class="item-subtotal"><%=cart.caractéristique%></p>
                  </td>
                  <td>  
                    <p class="item-subtotal"><%=cart.reference%></p>
                  </td>
  
                  <td>  
                    <p class="item-subtotal"><%=cart.prix%> €</p>
                  </td>

                  <td>
                    <a href="/panier/delete/<%= cart.id %>">Enlever de la liste</a>
                  </td>
                </tr>
              <% }}%>
            
  
            </table>
  
            <div class="row">
              <div class="col text-right">
                  <a class="btn btn-success" href="/">
                    Retour à l'accueil
                  </a>
              </div>
            </div>
  
          </div>
        </div>
    </div>
  